<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <queries>
        <intent>
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.BROWSABLE" />

            <data android:scheme="https" />
        </intent>
        <intent>
            <action android:name="android.support.customtabs.action.CustomTabsService" />
        </intent>

        <package android:name="com.google.ar.core" />
    </queries>

    <application
        android:name=".various.BeginApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RoundRoblx"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Panel.WordListActivity"
            android:exported="false" />
        <activity
            android:name=".Panel.TutorialFullActivity"
            android:exported="false" />
        <activity
            android:name=".Panel.TutorialActivity"
            android:exported="false" />
        <activity
            android:name=".Panel.FunnyActivity"
            android:exported="false" />
        <activity
            android:name=".Panel.LuckySpinActivity"
            android:exported="false" />
        <activity
            android:name=".Panel.UserSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".Panel.BeginBrainTextActivity"
            android:exported="false" />
        <activity
            android:name=".Panel.BrainTestActivity"
            android:exported="false" />
        <activity
            android:name=".Panel.CanvasActivity"
            android:exported="false" />
        <activity
            android:name=".Panel.ExchangeActivity"
            android:exported="false" />
        <activity
            android:name=".Panel.WorkSpaceActivity"
            android:exported="false" />
        <activity
            android:name=".Panel.StartActivity"
            android:exported="false"
            android:theme="@style/let_go_screen" />
        <activity
            android:name=".Panel.LetGoActivity"
            android:exported="false"
            android:theme="@style/let_go_screen" />
        <activity
            android:name=".Panel.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>