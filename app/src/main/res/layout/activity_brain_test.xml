<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Panel.BrainTestActivity">

    <include
        android:id="@+id/roundAppBar"
        layout="@layout/app_bar_layout" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/roundAppBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/roundTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/round_t_m"
                android:layout_marginTop="@dimen/round_t_m"
                android:background="@drawable/round_word_svg_small_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/roundNoCostSpin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/round_regular"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    tools:text="Free Spin:- 10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/round_t_m"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/round1"
                    style="@style/buttonSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/round_h_m"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_a_20_bg"
                    android:elevation="15dp"
                    android:textColor="@color/black"
                    app:backgroundTint="@null"
                    tools:text="@string/no" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/round2"
                    style="@style/buttonSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="@dimen/round_h_m"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_a_20_bg"
                    android:elevation="15dp"
                    android:textColor="@color/black"
                    app:backgroundTint="@null"
                    tools:text="@string/no" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/round_t_m"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/round3"
                    style="@style/buttonSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/round_h_m"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_a_20_bg"
                    android:elevation="15dp"
                    android:textColor="@color/black"
                    app:backgroundTint="@null"
                    tools:text="@string/no" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/round4"
                    style="@style/buttonSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="@dimen/round_h_m"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_a_20_bg"
                    android:elevation="15dp"
                    android:textColor="@color/black"
                    app:backgroundTint="@null"
                    tools:text="@string/no" />


            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSubmitAnswer"
        style="@style/buttonSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/round_t_m"
        android:background="@drawable/round_button_bg"
        android:paddingHorizontal="60dp"
        android:text="@string/round_submit_answer"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@id/buttonLayoutHolder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/buttonLayoutHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/round_t_m"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include
            android:id="@+id/headLineHolder"
            layout="@layout/layout_round_bottom_view" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>