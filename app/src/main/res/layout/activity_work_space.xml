                        app:layout_constraintBottom_toBottomOf="@id/roundLayoutBCToRBX"
                        app:layout_constraintEnd_toEndOf="@id/roundLayoutBCToRBX"
                        app:layout_constraintStart_toStartOf="@id/roundLayoutBCToRBX"
                        app:layout_constraintTop_toTopOf="@id/roundLayoutBCToRBX" />

                    <LinearLayout
                        android:id="@+id/roundLayoutBCToRBX"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/round_work_bg"
                        android:gravity="center"
                        android:padding="7dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/round_bc" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
