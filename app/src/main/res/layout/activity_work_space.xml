                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="@dimen/round_t_m"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/roundTBCToRBX"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="-12dp"
                        android:background="@drawable/round_work_button_bg"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="@id/roundTextTBCToRBX"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/roundViewTBCToRBX" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/roundTextTBCToRBX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/round_regular"
                        android:includeFontPadding="false"
                        android:text="@string/tbc_to_rbx"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/roundLayoutTBCToRBX" />

                    <View
                        android:id="@+id/roundViewTBCToRBX"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toBottomOf="@id/roundLayoutTBCToRBX"
                        app:layout_constraintEnd_toEndOf="@id/roundLayoutTBCToRBX"
                        app:layout_constraintStart_toStartOf="@id/roundLayoutTBCToRBX"
                        app:layout_constraintTop_toTopOf="@id/roundLayoutTBCToRBX" />

                    <LinearLayout
                        android:id="@+id/roundLayoutTBCToRBX"
