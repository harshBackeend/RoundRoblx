<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Panel.WorkSpaceActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/roundHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:elevation="20dp"
        android:paddingHorizontal="@dimen/round_h_m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/roundTextHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/round_bold"
            android:includeFontPadding="false"
            android:text="@string/get_daily_robox"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/roundTextSubHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/roundTextSubHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/round_bold"
            android:includeFontPadding="false"
            android:text="@string/app_name"
            android:textColor="@color/sub_text_color"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roundTextHeader" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_action_bar_bg"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/round_money" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/roundTextMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/round_p_b"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roundTextHeader"
                tools:text="5000" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/roundHeaderLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/roundRBXTODollar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/round_h_m"
                android:layout_marginTop="@dimen/round_t_m"
                android:background="@drawable/round_let_go_bu_bg"
                android:gravity="center_vertical"
                android:padding="12dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/roundMoneyBag"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/round_money_bag"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/round_regular"
                    android:includeFontPadding="false"
                    android:text="@string/rbx_to_dollar"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/roundMoneyBag"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/round_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/roundFirestLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="@dimen/round_t_m"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/roundDollarToRBX"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="-12dp"
                        android:background="@drawable/round_work_button_bg"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="@id/roundTextRBXToDollar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/roundViewDollarToRBX" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/roundTextRBXToDollar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/round_regular"
                        android:includeFontPadding="false"
                        android:text="@string/rbx_to_dollar"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/roundLayoutDollarToRBX" />

                    <View
                        android:id="@+id/roundViewDollarToRBX"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toBottomOf="@id/roundLayoutDollarToRBX"
                        app:layout_constraintEnd_toEndOf="@id/roundLayoutDollarToRBX"
                        app:layout_constraintStart_toStartOf="@id/roundLayoutDollarToRBX"
                        app:layout_constraintTop_toTopOf="@id/roundLayoutDollarToRBX" />

                    <LinearLayout
                        android:id="@+id/roundLayoutDollarToRBX"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/round_work_bg"
                        android:gravity="center"
                        android:padding="7dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/round_dollar" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/roundScratch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="-12dp"
                        android:background="@drawable/round_work_button_bg"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="@id/roundTextScratch"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/roundViewScratch" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/roundTextScratch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/round_regular"
                        android:includeFontPadding="false"
                        android:text="@string/scratch"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/roundLayoutScratch" />

                    <View
                        android:id="@+id/roundViewScratch"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toBottomOf="@id/roundLayoutScratch"
                        app:layout_constraintEnd_toEndOf="@id/roundLayoutScratch"
                        app:layout_constraintStart_toStartOf="@id/roundLayoutScratch"
                        app:layout_constraintTop_toTopOf="@id/roundLayoutScratch" />

                    <LinearLayout
                        android:id="@+id/roundLayoutScratch"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/round_work_bg"
                        android:gravity="center"
                        android:padding="7dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/round_scratch" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
