                        android:layout_height="36dp"
                        android:background="@drawable/round_work_bg"
                        android:gravity="center"
                        android:padding="7dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/round_tbc" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/roundOBCToRBX"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="-12dp"
                        android:background="@drawable/round_work_button_bg"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="@id/roundTextOBCToRBX"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/roundViewOBCToRBX" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/roundTextOBCToRBX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/round_regular"
                        android:includeFontPadding="false"
                        android:text="@string/obc_to_rbx"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/roundLayoutOBCToRBX" />

                    <View
                        android:id="@+id/roundViewOBCToRBX"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toBottomOf="@id/roundLayoutOBCToRBX"
                        app:layout_constraintEnd_toEndOf="@id/roundLayoutOBCToRBX"
                        app:layout_constraintStart_toStartOf="@id/roundLayoutOBCToRBX"
                        app:layout_constraintTop_toTopOf="@id/roundLayoutOBCToRBX" />

                    <LinearLayout
                        android:id="@+id/roundLayoutOBCToRBX"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/round_work_bg"
                        android:gravity="center"
                        android:padding="7dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/round_obc" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/roundQuiz"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="-12dp"
                        android:background="@drawable/round_work_button_bg"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="@id/roundTextQuiz"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/roundViewQuiz" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/roundTextQuiz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/round_regular"
                        android:includeFontPadding="false"
                        android:text="@string/quiz"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/roundLayoutQuiz" />

                    <View
                        android:id="@+id/roundViewQuiz"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toBottomOf="@id/roundLayoutQuiz"
                        app:layout_constraintEnd_toEndOf="@id/roundLayoutQuiz"
                        app:layout_constraintStart_toStartOf="@id/roundLayoutQuiz"
                        app:layout_constraintTop_toTopOf="@id/roundLayoutQuiz" />

                    <LinearLayout
                        android:id="@+id/roundLayoutQuiz"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/round_work_bg"
                        android:gravity="center"
                        android:padding="7dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

